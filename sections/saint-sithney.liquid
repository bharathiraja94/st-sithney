<section class="saint_sithney">
  <div class="container-fluid">
    <img src="{{ section .settings.image | img_url: 'master' }}" class="img-fluid headimg">

    <div class="d-flex  saint_body justify-content-{{ section .settings .image_box_alignment }}">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <div class="position-relative  saint_box">
            <div class="image-box">
            <img src="{{ block.settings.image|img_url: 'master' }}" class="img-fluid img1 img_ani">
            <div style="background:{{ block.settings.custom_background_color }}" class="saint_sithney_inner">
              <img src="{{ block .settings.heading_image |img_url: 'master' }}" class="img-fluid headimg" >
              {{ block.settings.richtext }}
            </div>
            <a href="{{ block .settings .button_url }}" class="btn  buynow2 buy_btn">
              {{ block.settings.button }}</a>
          </div>
          </div>
      
          <!-- <div class="position-relative saint_box">
            <img src="{{ block.settings.image_2|img_url: 'master' }}" class="img-fluid img2 img_ani">
            <div style="background:{{ block.settings.custom_background_color_1 }}" class="saint_sithney_inner scncolor">
              <img src="{{ block .settings.heading_image_1 |img_url: 'master'  }}" class="img-fluid headimg">
             
              {{ block.settings.richtext_1 }}
            </div>
            <a href="{{ block .settings .button_url_1 }}" class="btn  buynow2 buy_btn buy_bt2">
                {{ block.settings.button_1 }}</a>
          </div>  -->
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>


