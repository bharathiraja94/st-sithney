{% section 'follow-as' %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
  var ginLink = document.getElementById('gin-link');
  var vodkaLink = document.getElementById('vodka-link');
  var ginActive = document.querySelector('.gin_link');
  var vodkaActive = document.querySelector('.vodka_link');
  var ginPosts = document.querySelector('.gin-posts');
  var vodkaPosts = document.querySelector('.vodka-posts');

  ginLink.addEventListener('click', function() {
    ginPosts.style.display = 'block';
    ginActive.classList.add('active'); // Add the 'active' class to the gin-posts container
    vodkaPosts.style.display = 'none';
    vodkaActive.classList.remove('active'); // Remove the 'active' class from the vodka-posts container
  });

  vodkaLink.addEventListener('click', function() {
    vodkaPosts.style.display = 'block';
    vodkaActive.classList.add('active'); // Add the 'active' class to the vodka-posts container
    ginPosts.style.display = 'none';
    ginActive.classList.remove('active'); // Remove the 'active' class from the gin-posts container
  });
});


</script>