<section>
  <div class="container">
    <div class="d-flex justify-content-center py-5 cocktailtab">
        <a href="javascript:void(0)" class="gin_link active" id="gin-link">GIN</a>
        <a href="javascript:void(0)" class="vodka_link" id="vodka-link">VODKA</a>
    </div>
    
              {% assign ginBlog = blogs['gin']%}
              {% assign vodkaBlog = blogs['vodka'] %}
       <div id="blog-posts" class="gin-posts">
          <div class="row cocktaillist">
            {% for article in ginBlog.articles %}
              <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="gin">
                  {% if article.image %}
                    <img src="{{ article.image.src | img_url: 'medium' }}" class="img-fluid">
                  {% else %}
                    <img src="{{ 'cornish.png' | asset_url }}" class="img-fluid 1">
                  {% endif %}
                  <a href="{{ article.url }}">
                  <h3>
                    {{ article.title }}
                  </h3>
                    <p>{{ article.excerpt }}</p>
                    </a>
                  <span class="d-block">
                   <img src="https://cdn.shopify.com/s/files/1/0822/0514/7429/files/clock.png?v=1694083459" class="clock">
                    {{ article.metafields.custom.ready_to_time  }}
                  </span>
                 </div>
              </div>
            {% endfor %}
          </div>
        </div>
        <div id="blog-posts" class="vodka-posts" style="display: none;">
          <div class="row cocktaillist">
            {% for article in vodkaBlog.articles %}
              <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="gin">
                  {% if article.image %}
                    <img src="{{ article.image.src | img_url: 'medium' }}" class="img-fluid">
                  {% else %}
                    <img src="{{ 'cornish.png' | asset_url }}" class="img-fluid 1">
                  {% endif %}
                  <h3>
                    <a href="{{ article.url }}">{{ article.title }}</a>
                  </h3>
                    <p>{{ article.excerpt }}</p>
                  <span class="d-block">
                    <img src="https://cdn.shopify.com/s/files/1/0822/0514/7429/files/clock.png?v=1694083459" class="clock">
                    {{ article.metafields.custom.ready_to_time  }}
                  </span>
                 </div>
              </div>
            {% endfor %}
          </div>
        </div>
   </div>
