{% paginate collection.products by 6 %}
  <h1>{{ collection.title }}</h1>
  {% for product in collection.products %}
    <div class="col-md-4 col-sm-12 col-xs-12">
      <div class="product" style="text-align: center;">
        <img
          src="{{ product.featured_image.src | img_url: 'large' }}"
          alt="{{ product.featured_image.alt | escape }}"
          class="img-fluid">
        <div class="text-center product_innerbox">
          <h2>Saint Sithney</h2>
          <p>
            <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
          </p>
          <span class="d-block">{{ product.price | money }}</span>
          {% unless product.available %}<br><strong>sold out</strong>
          {% endunless %}
        </div>
      </div>
    </div>
  {% else %}
    <p>no matches</p>
  {% endfor %}
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}{% endif %}
{% endpaginate %}